@using PortalWebApp.Models
@model StrapChart
@{
    ViewData["Title"] = "Strapping Chart";
}

<h4>Strapping Chart</h4>
<hr />
<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <div style="width:80%">
        <table class="table table-striped">
            <tr>
                <td style="width:200px">Organization</td>
                <td style="width:150px">
                   @Html.LabelFor(StrapChart => StrapChart.UserOrgID)
                    <input type="hidden" id="txtEnvironment" value="@TempData.Peek("Environment")" />
                    <input type="hidden" id="txtUserID" value="@TempData.Peek("Userid")" />
                </td>
               
            </tr>

            <tr>
                <td>@Html.LabelFor(model => model.ChartDesc)</td>
                <td>
                    <select id="ddlChart" name="ChartId">
                        <option value="0">Please select</option>
                        @foreach (var item in StrapChart.StrapList)
                        {
                            <option value="@item.ChartID">@item.ChartDesc</option>
                        }
                    </select>
                </td>
             </tr>

          
           
            <tr>
                <td colspan="3">
                    &nbsp;
                </td>
            <tr>
                <td colspan="3">
                    <span style="color:green">@Html.Raw(ViewBag.Message)</span>
                    
                    <input type="submit" id="ImportExcel" value="Run BULK CONFIG IMPORT   " disabled />
                    <div id="spin" class="spinner-border" role="status" style="visibility:hidden">
                        <span class="sr-only">Loading...</span>
                    </div>
                    <br /><br />

                </td>
            </tr>
        </table>
    </div>

    </form>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @section scripts{
        <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
        <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
        <script src="~/lib/signalr/signalr.js"></script>
        <script src="~/js/notification.js"></script>
     
    }


